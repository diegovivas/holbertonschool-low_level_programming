#include "holberton.h"
/**
 * print_square - check the code for Holberton School students.
 *@size:character
 * Return: Always 0.
 */
void print_triangle(int size)
{
	int e, h;

	for (e = size; e >= 1; e--)
	{
		for (h = 1; h <= size; h++)
		{
			if (h <= e)
			{
			_putchar('#');
			}
			else 
			{
				_putchar('.');			
}
		}

		_putchar('\n');
	}
	if (size <= 0)
	{
		_putchar('\n');
	}

}
