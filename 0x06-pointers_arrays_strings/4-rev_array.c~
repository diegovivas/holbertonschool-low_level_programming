#include "holberton.h"
/**
 * print_rev - check the code for Holberton School students.
 *@str:something
 * Return: Always 0.
 */
void reverse_array(char *str)
{
	char *z = str;
	int i;
	int count = 0;

	while (*str != '\0')
	{
		str++;
		count++;
	}

	i = count - 1;
	while (i >= 0)
	{
		_putchar(*(z + i));
		i--;
	}
	_putchar('\n');

}
